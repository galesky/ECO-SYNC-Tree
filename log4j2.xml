<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO" shutdownHook="disable">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
				<PatternLayout pattern="%highlight{%level{length=1} %d{dd/MM/yyyy-HH:mm:ss,SSS} %logger{0}} %msg%n"/>
        </Console>

        <File name="MyFile" fileName="${sys:logFilename}.log" append="false" immediateFlush="true">
            <PatternLayout pattern="%level{length=1} %d{dd/MM/yyyy-HH:mm:ss,SSS} %logger{0} %msg%n"/>
        </File>

    </Appenders>

    <Loggers>
        <!-- UNCOMMENT TO SPECIFY LOG LEVEL OF PACKAGES -->
        <Logger level="debug" name="protocols.apps"/>
        <Logger level="debug" name="protocols.replication"/>
        <Logger level="debug" name="protocols.broadcast"/>
        <Logger level="debug" name="protocols.membership"/>


        <Logger level="debug" name="io.netty"/>
        <Logger level="debug" name="pt.unl.fct.di.novasys.network"/>
        <Logger level="debug" name="pt.unl.fct.di.novasys.channel"/>
        <Logger level="debug" name="pt.unl.fct.di.novasys.babel"/>


        <Root level="debug">
            <AppenderRef ref="Console" level="debug"/>
           <AppenderRef ref="MyFile" level="debug"/>
       </Root>
   </Loggers>

</Configuration>
